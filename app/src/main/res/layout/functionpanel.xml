<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mainlayout"
        android:layout_width="190dp"
        android:layout_height="339dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="184dp"
        android:background="#808BC34A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/buttonleft"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Left"
        app:layout_constraintBottom_toBottomOf="@+id/mainlayout"
        app:layout_constraintEnd_toStartOf="@+id/mainlayout"
        app:layout_constraintTop_toTopOf="@+id/mainlayout" />

    <Button
        android:id="@+id/buttonright"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Right"
        app:layout_constraintBottom_toBottomOf="@+id/mainlayout"
        app:layout_constraintStart_toEndOf="@+id/mainlayout"
        app:layout_constraintTop_toTopOf="@+id/mainlayout"
        app:layout_constraintVertical_bias="0.508" />

    <Button
        android:id="@+id/buttonup"
        android:layout_width="30dp"
        android:layout_height="120dp"
        android:text="Up"
        app:layout_constraintBottom_toTopOf="@+id/mainlayout"
        app:layout_constraintEnd_toStartOf="@+id/buttonright"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/buttonleft" />

    <Button
        android:id="@+id/buttondown"
        android:layout_width="30dp"
        android:layout_height="120dp"
        android:text="Down"
        app:layout_constraintEnd_toStartOf="@+id/buttonright"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toEndOf="@+id/buttonleft"
        app:layout_constraintTop_toBottomOf="@+id/mainlayout" />
</android.support.constraint.ConstraintLayout>